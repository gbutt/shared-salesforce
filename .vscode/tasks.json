    "version": "2.0.0",
    "tasks": [
        {
            "label": "sfdx-push",
            "type": "shell",
            "command": "sfdx force:source:push",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "sfdx-push-force",
            "type": "shell",
            "command": "sfdx force:source:push -f"
        },
        {
            "label": "sfdx-jest-test",
            "type": "shell",
            "command": "npm run test:unit"
        },
        {
            "label": "sfdx-apex-test",
            "type": "shell",
            "command": "sfdx force:apex:test:run -n ${fileBasenameNoExtension} -w 10 -c -r human",
            "problemMatcher": []
        },
        {
            "label": "sfdx-apex-all-tests",
            "type": "shell",
            "command": "sfdx force:apex:test:run -w 10 -c -r human",
            "problemMatcher": []
        }
    ]
}
